<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorGreen2">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/toolbarNameHome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/toolBarName"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    tools:ignore="RelativeOverlap" />

                <ImageButton
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_search_36pt"
                    android:background="@null"
                    android:layout_toRightOf="@+id/toolbarNameHome"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/content_desc"
                    android:layout_toEndOf="@+id/toolbarNameHome"
                    android:layout_marginStart="120dp" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>




</merge>