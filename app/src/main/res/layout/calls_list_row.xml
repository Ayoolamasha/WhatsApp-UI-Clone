<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/realativeLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp"
            android:contentDescription="@string/content_desc1"
            tools:src="@tools:sample/avatars"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@id/contactImage"
            android:maxLines="1"
            android:textColor="#333333"
            tools:text="@tools:sample/full_names"
            android:layout_toEndOf="@id/contactImage" />

        <ImageView
            android:id="@+id/outGoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName"
            android:layout_toLeftOf="@id/contactImage"
            android:src="@drawable/ic_outgoingcalluser_icon"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/content_descOut"
            android:layout_toStartOf="@id/contactTimeStamp"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/contactTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName"
            android:layout_toRightOf="@id/contactImage"
            android:layout_marginLeft="10dp"
            android:text="@string/callDateandTime"
            android:layout_toEndOf="@id/contactImage"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/makeCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_phone_icon"
            android:contentDescription="@string/content_descOut"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_below="@id/realativeLayout01">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactImage1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp"
            android:contentDescription="@string/content_desc1"
            tools:src="@tools:sample/avatars"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/contactName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@id/contactImage1"
            android:maxLines="1"
            android:textColor="#333333"
            tools:text="@tools:sample/full_names"
            android:layout_toEndOf="@id/contactImage1" />

        <ImageView
            android:id="@+id/outGoing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName1"
            android:layout_toLeftOf="@id/contactImage1"
            android:src="@drawable/ic_incomingcallothers_icon"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/content_descOut"
            android:layout_toStartOf="@id/contactTimeStamp1"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/contactTimeStamp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName1"
            android:layout_toRightOf="@id/contactImage1"
            android:layout_marginLeft="10dp"
            android:text="@string/callDateandTime"
            android:layout_toEndOf="@id/contactImage1"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/makeCall1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName1"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_phone_icon"
            android:contentDescription="@string/content_descOut"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/realativeLayout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grey_border_bottom"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_below="@id/realativeLayout02">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactImage2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            app:civ_border_color="@color/colorBlack"
            app:civ_border_width="2dp"
            android:contentDescription="@string/content_desc1"
            tools:src="@tools:sample/avatars"
            android:layout_marginRight="12dp" />

        <TextView
            android:id="@+id/contactName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_toRightOf="@id/contactImage2"
            android:maxLines="1"
            android:textColor="#333333"
            tools:text="@tools:sample/full_names"
            android:layout_toEndOf="@id/contactImage2" />

        <ImageView
            android:id="@+id/outGoing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName2"
            android:layout_toLeftOf="@id/contactImage2"
            android:src="@drawable/ic_missedcalluser_icon"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/content_descOut"
            android:layout_toStartOf="@id/contactTimeStamp2"
            android:layout_marginStart="50dp" />

        <TextView
            android:id="@+id/contactTimeStamp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName2"
            android:layout_toRightOf="@id/contactImage2"
            android:layout_marginLeft="10dp"
            android:text="@string/callDateandTime"
            android:layout_toEndOf="@id/contactImage2"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/makeCall2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactName2"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_phone_icon"
            android:contentDescription="@string/content_descOut"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</RelativeLayout>
